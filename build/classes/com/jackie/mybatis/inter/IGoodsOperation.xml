<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jackie.mybatis.inter.ICategoryOperation">
	<!-- 返回users条数 -->
	<select id="getCount" parameterType="string" resultType="java.lang.Integer">
		select count(id) from goods where status_del = 1
	</select>
	
	<!-- all list -->
	<select id="getList" parameterType="string" resultType="Goods">
		select * from goods where status_del = 1
	</select>
	
	<insert id="add" parameterType="Goods" useGeneratedKeys="true"
		keyProperty="id">
		insert into goods(name, code, category_code, time, num)
		values(#{name},#{code}, #{category_code}, #{time}, #{num})
	</insert>
	
	<!-- 删除user -->
	 <update id="delGood" parameterType="int">
        update goods set status_del = 0 where id=#{id}
    </update>
</mapper>